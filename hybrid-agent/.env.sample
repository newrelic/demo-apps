# New Relic Core
NEW_RELIC_LICENSE_KEY=your_license_key_here
NEW_RELIC_ACCOUNT_ID=your_account_id

# New Relic Region (US or EU)
# US: https://otlp.nr-data.net
# EU: https://otlp.eu01.nr-data.net
NEW_RELIC_REGION=US

# Browser Agent (Optional - leave as defaults to skip Browser monitoring)
# If you want to enable Browser monitoring, get these values from New Relic UI
# Otherwise, the demo will work with just APM/OTel/Hybrid backend instrumentation
NEW_RELIC_TRUST_KEY=your_trust_key
NEW_RELIC_BROWSER_AGENT_ID=your_browser_agent_id
NEW_RELIC_BROWSER_APP_ID=your_browser_app_id

# APM Service Names
APM_ORDER_SERVICE_NAME="NRDEMO Order Service (APM)"
APM_INVENTORY_SERVICE_NAME="NRDEMO Inventory Service (APM)"
APM_PAYMENT_SERVICE_NAME="NRDEMO Payment Service (APM)"

# OTel Service Names
OTEL_ORDER_SERVICE_NAME="NRDEMO Order Service (OTel)"
OTEL_INVENTORY_SERVICE_NAME="NRDEMO Inventory Service (OTel)"
OTEL_PAYMENT_SERVICE_NAME="NRDEMO Payment Service (OTel)"

# Hybrid Service Names
HYBRID_ORDER_SERVICE_NAME="NRDEMO Order Service (Hybrid)"
HYBRID_INVENTORY_SERVICE_NAME="NRDEMO Inventory Service (Hybrid)"
HYBRID_PAYMENT_SERVICE_NAME="NRDEMO Payment Service (Hybrid)"

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=appuser
DB_PASSWORD=apppassword

# Demo Configuration
PAYMENT_DELAY_MS=2000
PAYMENT_ERROR_RATE=0.1

# Load Generator Configuration
SCENARIO_INTERVAL_MS=30000
SCENARIOS=happy-path,out-of-stock,slow-payment
