# ===================================================
# New Relic Configuration
# ===================================================

# New Relic Ingest License Key (REQUIRED)
# Get from: https://one.newrelic.com/launcher/api-keys-ui.api-keys-launcher
NEW_RELIC_LICENSE_KEY=your_license_key_here

# Application name in New Relic (appears in APM)
NEW_RELIC_APP_NAME=java-profiling-demo

# Enable JFR (Java Flight Recorder) integration (REQUIRED for demo)
NEW_RELIC_JFR_ENABLED=true

# Log level (options: off, severe, warning, info, fine, finer, finest)
NEW_RELIC_LOG_LEVEL=info

# Enable distributed tracing (default: true)
NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=true

# ===================================================
# Application Configuration
# ===================================================

# Spring Boot profile (optional)
SPRING_PROFILES_ACTIVE=default

# Server port (default: 8080)
SERVER_PORT=8080

# ===================================================
# Locust Configuration
# ===================================================

# Target host for Locust load generation (internal Docker network address)
LOCUST_TARGET_HOST=http://java-app:8080

# Auto-start scenarios (runs automated load generation in headless mode)
LOCUST_AUTOSTART=true
