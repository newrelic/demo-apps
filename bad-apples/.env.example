# Bad Apples Orchard Demo - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# PORT CONFIGURATION
# ============================================================================
# Change these if default ports are already in use on your system
# Run: lsof -i :5000 -i :5001 -i :5002 -i :5432 to check for conflicts
FRONTEND_PORT=5000
INVENTORY_PORT=5001
ORDER_PORT=5002
POSTGRES_PORT=5432

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================
# Get your license key from: https://one.newrelic.com/launcher/api-keys-ui.api-keys-launcher
NEW_RELIC_LICENSE_KEY=your_license_key_here

# New Relic Application Names (must be unique)
NEW_RELIC_APP_NAME_FRONTEND=bad-apples_frontend
NEW_RELIC_APP_NAME_INVENTORY=bad-apples_inventory
NEW_RELIC_APP_NAME_ORDERS=bad-apples_orders

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=orchard_db
POSTGRES_USER=orchard_user
POSTGRES_PASSWORD=orchard_pass

# ============================================================================
# SEED MODE
# ============================================================================
# Controls how much data is seeded into the database
#
# development: (default)
#   - 5 apple varieties
#   - 3 sample orders
#   - N+1 problem is NOT noticeable (fast queries)
#
# production:
#   - 8 apple varieties
#   - 1000+ orders
#   - N+1 problem is VERY noticeable (slow queries, 1001 SQL statements)
#
# To demonstrate Problem 1 (N+1 SQL), use SEED_MODE=production
SEED_MODE=development

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
FLASK_SECRET_KEY=bad-apples-secret-key-change-in-production

# ============================================================================
# SELENIUM LOAD GENERATION
# ============================================================================
# Number of concurrent Selenium users generating traffic
SELENIUM_USERS=3

# Seconds between each journey iteration
SELENIUM_REQUEST_INTERVAL=5
